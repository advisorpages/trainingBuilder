{
  "name": "leadership-training-app",
  "version": "1.0.0",
  "description": "Leadership Training App - Mobile-first platform for creating and promoting training sessions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:detached": "docker-compose up --build -d",
    "dev:test": "docker-compose -f docker-compose.test.yml up --build",
    "down": "docker-compose down",
    "clean": "docker-compose down -v",
    "install:all": "npm install && npm run install:packages",
    "install:packages": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "playwright test",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:watch": "concurrently \"npm run test:watch --workspace=packages/backend\" \"npm run test:watch --workspace=packages/frontend\"",
    "test:ci": "npm run test:backend:ci && npm run test:frontend:ci && npm run test:e2e",
    "test:backend": "npm run test --workspace=packages/backend",
    "test:backend:ci": "npm run test:ci --workspace=packages/backend",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "test:frontend:ci": "npm run test:ci --workspace=packages/frontend",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "local"
  },
  "keywords": [
    "training",
    "leadership",
    "education",
    "react",
    "nestjs",
    "typescript",
    "docker"
  ],
  "author": "BMad Master",
  "license": "MIT",
  "dependencies": {
    "@nestjs/axios": "^3.1.3",
    "axios": "^1.12.2"
  }
}
